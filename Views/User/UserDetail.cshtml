
@{
    ViewBag.Title = "UserDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    var userId=@ViewBag.userId
</script>
<style>
    .ulColumn2 select {
        width: 225px;
    }
</style>

@{ var uir = new HHTDCDMR.Models.Extend.Res.UserIndexRes();
    uir = ViewBag.uir;
}


@{ if (uir != null)
    {
        <div class="col-lg-12 col-md-12">
            <div class="widget">
                <div class="widget-header">
                    <div class="title">
                        个人信息
                    </div>
                </div>
                <div class="widget-body">
                    <div class="form-horizontal no-margin">
                        <div class="form-group">
                            <label for="userName" class="col-sm-1 control-label">名称</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control userName" value="@uir.name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="userName" class="col-sm-1 control-label">账号</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control userAccount" value="@uir.account" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="userName" class="col-sm-1 control-label">修改密码</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control pwd" value="" placeholder="输入则重置密码" />
                            </div>
                        </div>
                        @{ if (!uir.isStaff)
                            {
                                <div class="form-group">
                                    <label for="userName" class="col-sm-1 control-label">区域</label>
                                    <div class="col-sm-4">
                                        <input type="text" class="form-control " readonly value="@uir.areaName" />
                                    </div>
                                </div>
                            }
                        }
                        @if (uir.level == 100)
                        {
                            <div class="form-group">
                                <label for="userName" class="col-sm-1 control-label">手机号</label>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control userPhone" value="@uir.phone" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="" class="col-sm-1 control-label">关注发送微信警报</label>
                                <div class="col-sm-2">
                                    <img src="~/Current/images/qcode.jpg" alt="Alternate Text" style="width:200px" />
                                </div>
                            </div>
                        }
                        <div class="form-group">
                            <div class="col-sm-offset-1 col-sm-10">
                                <button class="btn btn-info btn-save">更新</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>您没有权限查看该账号</p>
    } }

<script src="~/Current/js/user/userDetail.js?201808271640"></script>
