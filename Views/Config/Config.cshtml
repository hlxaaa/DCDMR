
@{
    ViewBag.Title = "Config";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section js{
    <script src="~/Current/js/Config/config.js?201808271640"></script>
}

<style>
    .ulColumn2 li .select {
        width: 225px;
    }
</style>
@{ var config = new HHTDCDMR.Models.Extend.Res.Config2();
    config = ViewBag.config;
}

<div class="col-lg-12 col-md-12">
    <div class="widget">
        <div class="widget-header">
            <div class="title">
                参数设置
            </div>
        </div>
        <div class="widget-body">
            <div class="form-horizontal no-margin">
                <div class="form-group">
                    <label for="userName" class="col-sm-1 control-label">实时数据刷新频率(秒)</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control FLMeterDataRefreshRate" id="meterNo" value="@config.FLMeterDataRefreshRate">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-1 col-sm-10">
                        <button class="btn btn-info btn-save">更新</button>
                        <span class="item_name" style="color:red">(更新后需要重新登录)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>